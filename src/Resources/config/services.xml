<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false" />

        <prototype namespace="Tienvx\Bundle\MbtBundle\" resource="../../*" exclude="../../{Entity,Resources,Message,Algorithm,Helper}" />

        <service id="mbt.generator_manager" class="Tienvx\Bundle\MbtBundle\Generator\GeneratorManager" public="false" autowire="true">
            <argument type="collection" />
        </service>
        <service id="Tienvx\Bundle\MbtBundle\Generator\GeneratorManager" alias="mbt.generator_manager" />

        <service id="mbt.path_reducer_manager" class="Tienvx\Bundle\MbtBundle\PathReducer\PathReducerManager" public="false" autowire="true">
            <argument type="collection" />
        </service>
        <service id="Tienvx\Bundle\MbtBundle\PathReducer\PathReducerManager" alias="mbt.path_reducer_manager" />

        <service id="mbt.reporter_manager" class="Tienvx\Bundle\MbtBundle\Reporter\ReporterManager" public="false" autowire="true">
            <argument type="collection" />
        </service>
        <service id="Tienvx\Bundle\MbtBundle\Reporter\ReporterManager" alias="mbt.reporter_manager" />

        <service id="mbt.subject_manager" class="Tienvx\Bundle\MbtBundle\Subject\SubjectManager" public="false" autowire="true">
            <argument type="collection" />
        </service>
        <service id="Tienvx\Bundle\MbtBundle\Subject\SubjectManager" alias="mbt.subject_manager" />

        <service id="mbt.entity_subscriber" class="Tienvx\Bundle\MbtBundle\EventListener\EntitySubscriber">
            <tag name="doctrine.event_subscriber"/>
        </service>
    </services>
</container>
