<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false" />

        <prototype namespace="Tienvx\Bundle\MbtBundle\" resource="../../*" exclude="../../{Entity,Resources,Graph,Model,Subject,Message,Algorithm,Helper}" />

        <service id="Symfony\Component\ExpressionLanguage\ExpressionLanguage" class="Symfony\Component\ExpressionLanguage\ExpressionLanguage" />

        <service id="mbt.generator_manager" class="Tienvx\Bundle\MbtBundle\Service\GeneratorManager" public="false" autowire="true">
            <argument type="collection" />
        </service>
        <service id="Tienvx\Bundle\MbtBundle\Service\GeneratorManager" alias="mbt.generator_manager" />

        <service id="mbt.stop_condition_manager" class="Tienvx\Bundle\MbtBundle\Service\StopConditionManager" public="false" autowire="true">
            <argument type="collection" />
        </service>
        <service id="Tienvx\Bundle\MbtBundle\Service\StopConditionManager" alias="mbt.stop_condition_manager" />

        <service id="mbt.path_reducer_manager" class="Tienvx\Bundle\MbtBundle\Service\PathReducerManager" public="false" autowire="true">
            <argument type="collection" />
        </service>
        <service id="Tienvx\Bundle\MbtBundle\Service\PathReducerManager" alias="mbt.path_reducer_manager" />

        <service id="mbt.reporter_manager" class="Tienvx\Bundle\MbtBundle\Service\ReporterManager" public="false" autowire="true">
            <argument type="collection" />
        </service>
        <service id="Tienvx\Bundle\MbtBundle\Service\ReporterManager" alias="mbt.reporter_manager" />

        <service id="mbt.entity_subscriber" class="Tienvx\Bundle\MbtBundle\EventListener\EntitySubscriber">
            <tag name="doctrine.event_subscriber"/>
        </service>

        <service id="GuzzleHttp\Client" class="GuzzleHttp\Client" autowire="true"/>
    </services>
</container>
